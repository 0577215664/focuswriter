Un-official upstream releases created with, eg

u=1.3.5
r=$(git show-ref upstream/master | head -c8)
v=$u+git.$r
p=focuswriter
git tag -s -u<KEY> -m 'unofficial upstream release' upstream/$v
git archive --format tar --prefix $p/ $r | gzip -9 > ../$p_$v.orig.tar.gz

